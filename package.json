{
  "name": "clean-node-api",
  "version": "1.2.0",
  "description": "NodeJs Rest API using TDD, Clean Architecture and Typescript",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc --project tsconfig-build.json && tscpaths -p tsconfig-build.json -s ./src -o ./dist",
    "dev": "ts-node-dev -r tsconfig-paths/register src/main/server.ts",
    "pretest": "docker-compose up -d dbtest",
    "test": "jest --passWithNoTests --runInBand --forceExit",
    "posttest": "docker-compose stop dbtest",
    "test:watch": "npm test -- --watch --silent --noStackTrace",
    "test:e2e": "npm test -- --config jest-e2e.config.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.15.2",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.14",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "git-commit-msg-linter": "^4.9.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "mockdate": "^3.0.5",
    "prettier": "^2.3.2",
    "rimraf": "^4.4.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "4.0.1",
    "reflect-metadata": "^0.1.13",
    "tscpaths": "^0.0.9",
    "validator": "^13.9.0"
  },
  "lint-staged": {
    "*ts": [
      "eslint src/** --fix",
      "prettier --write",
      "npm run test -- --coverage",
      "npm run test:e2e --"
    ]
  }
}
